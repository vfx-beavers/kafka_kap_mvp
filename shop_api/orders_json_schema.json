{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "OrdersSchema",
  "type": "object",
  "properties": {
    "order_id": {
      "type": "string"
    },
    "customer_id": {
      "type": "string"
    },
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "product_id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "sku": {
            "type": "string"
          },
          "brand": {
            "type": "string"
          },
          "category": {
            "type": "string"
          },
          "index": {
            "type": "string"
          },
          "store_id": {
            "type": "string"
          },
          "description": {
            "type": "string"
          }
        }
      }
    },
    "email": {
      "type": "string"
    },
    "order_date": {
      "type": "string"
    },
    "state": {
      "type": "string"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    }
  },
  "required": ["order_id", "customer_id", "timestamp"]
}